{
  "name": "home-station-api",
  "version": "1.0.0",
  "description": "A REST API for the Arduino Home Station project",
  "bin": "out/server/app.js",
  "repository": "https://github.com/n9iels/home-station-api",
  "author": "Niels van der Veer <n.i.vdveer@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build-back": "tsc --outDir ./out",
    "build-front": "webpack",
    "css": "gulp",
    "start:dev": "nodemon ./out/server/app.js",
    "start": "pm2 start ecosystem.config.js --env production",
    "restart": "pm2 restart ecosystem.config.js",
    "stop": "pm2 stop ecosystem.config.js",
    "delete": "pm2 delete ecosystem.config.js",
    "status": "pm2 status"
  },
  "pkg": {
    "scripts": "out/**/*.js",
    "assets": "wwwroot/**/*"
  },
  "dependencies": {
    "dotenv": "^6.0.0",
    "moment": "^2.22.2",
    "mysql2": "^1.6.1",
    "pm2": "^3.1.3",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "restify": "^7.2.1",
    "sequelize": "^4.41.0",
    "sequelize-cli": "^5.2.0"
  },
  "devDependencies": {
    "@types/dotenv": "^4.0.3",
    "@types/react": "^16.4.14",
    "@types/react-dom": "^16.0.8",
    "@types/restify": "^7.2.4",
    "@types/sequelize": "^4.27.30",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^6.0.0",
    "gulp-clean-css": "^3.10.0",
    "gulp-sass": "^4.0.1",
    "node-normalize-scss": "^8.0.0",
    "nodemon": "^1.18.4",
    "pkg": "^4.3.4",
    "ts-loader": "^5.2.1",
    "typescript": "^3.0.3",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2"
  }
}
